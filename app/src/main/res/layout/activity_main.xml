<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context=".MainActivity"
    >

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        >



        <soup.neumorphism.NeumorphCardView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:id="@+id/myNeumorphCard"
            android:layout_margin="3dp"
            android:padding="10dp"
            app:neumorph_shapeType="basin"
            app:neumorph_shadowElevation="25dp"
            app:neumorph_backgroundColor="#E0E0E0"
            app:neumorph_cornerFamily="rounded"
            app:neumorph_cornerSize="16dp"
            app:neumorph_shadowColorLight="#DEEF38"
            app:neumorph_shadowColorDark="#11E949"
            app:neumorph_lightSource="leftTop"
            >




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:orientation="horizontal"
                android:layout_marginTop="3dp"
                >

                <com.denzcoskun.imageslider.ImageSlider
                    android:id="@+id/imageSlider"
                    android:layout_width="wrap_content"
                    android:layout_height="300dp"
                    app:iss_auto_cycle="true"
                    app:iss_period="2000"
                    app:iss_delay="2000"
                    app:iss_text_align="CENTER"/>


                <ImageView
                    android:id="@+id/imageview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/city1" />
            </LinearLayout>

        </soup.neumorphism.NeumorphCardView>

    </LinearLayout>





    <soup.neumorphism.NeumorphCardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="20dp"
        android:padding="0dp"
        app:neumorph_shapeType="basin"
        app:neumorph_shadowElevation="6dp"
        app:neumorph_shadowColorDark="#EBEBE1"
        app:neumorph_cornerFamily="rounded"
        app:neumorph_cornerSize="10dp">




        <GridView
            android:id="@+id/gridview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:horizontalSpacing="12dp"
            android:numColumns="2"
            android:padding="12dp"

            android:stretchMode="columnWidth"
            android:verticalSpacing="1dp" />
    </soup.neumorphism.NeumorphCardView>
</LinearLayout>











