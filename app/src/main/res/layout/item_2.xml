<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
  >

    <soup.neumorphism.NeumorphCardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:padding="0dp"
        android:layout_gravity="center"
        app:neumorph_shapeType="pressed"
        app:neumorph_shadowElevation="6dp"
        app:neumorph_shadowColorLight="#E4DADA"
        app:neumorph_shadowColorDark="#ABB4C1"
        app:neumorph_backgroundColor="#E0E0E0"
        app:neumorph_cornerFamily="rounded"
        app:neumorph_cornerSize="16dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal"
            android:background="#DAC4C5B4"
            android:layout_margin="8dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">


                <TextView
                    android:id="@+id/tvname1"
                    android:layout_width="250dp"
                    android:layout_height="40dp"
                    android:text="Emranul Hoque"
                    android:textStyle="bold"
                    android:textSize="25sp"
                    android:gravity="center"
                    android:backgroundTint="@color/background"
                    android:background="@color/background"
                    android:layout_gravity="center" />

                <!-- Mobile Number TextView -->
                <TextView
                    android:id="@+id/tvmobile1"
                    android:layout_marginTop="5dp"
                    android:layout_width="250dp"
                    android:layout_height="40dp"
                    android:text="01862240062"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:gravity="center" />
            </LinearLayout>

        </LinearLayout>

    </soup.neumorphism.NeumorphCardView>

</LinearLayout>
