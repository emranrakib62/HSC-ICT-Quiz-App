<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#402F2C">

    <!-- CardView -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp">

        <!-- Inner LinearLayout (Horizontal orientation) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal"
            android:background="@color/colorAccent"
            android:layout_margin="15dp">

            <!-- Inner LinearLayout (Vertical orientation) for TextViews -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">

                <!-- Name TextView -->
                <TextView
                    android:id="@+id/tvname"
                    android:layout_width="250dp"
                    android:layout_height="40dp"
                    android:text="Emranul Hoque"
                    android:textStyle="bold"
                    android:textSize="25sp"
                    android:gravity="center"
                    android:backgroundTint="@color/shadow_color_bottom"
                    android:background="@color/colorPrimaryDark"
                    android:layout_gravity="center" />

                <!-- Mobile Number TextView -->
                <TextView
                    android:id="@+id/tvmobile"
                    android:layout_marginTop="5dp"
                    android:layout_width="250dp"
                    android:layout_height="40dp"
                    android:text="01862240062"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:gravity="center" />
            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>
